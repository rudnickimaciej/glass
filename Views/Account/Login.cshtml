@model  Translate.ViewModels.LoginViewModel



<div class="container mt--8 pb-5">
    <!-- Page content -->
    <!-- Table -->
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">
            <div class="card bg-secondary shadow border-0">
                <div class="card-header bg-transparent pb-5">
                    <div class="text-muted text-center mt-2 mb-3">Logowanie</div>
                </div>
                <div class="card-body px-lg-5 py-lg-5">

                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "register-form", id = "account", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group mb-3">
                            <div class="input-group input-group-alternative">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="ni ni-email-83"></i></span>
                                </div>
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", id = "username", placeholder = "Email" })

                            </div>
                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "invalid-feedback field-validation-valid", style = "display: block" })
                        </div>

                        <div class="form-group focused">
                            <div class="input-group input-group-alternative">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="ni ni-lock-circle-open"></i></span>
                                </div>
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control valid", id = "password", placeholder = "Hasło" })

                            </div>
                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "invalid-feedback field-validation-valid", style = "display: block" })
                        </div>

                        @*<div class="custom-control custom-control-alternative custom-checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe, new { @class = "custom-control-input", id = "customCheckLogin"})

                            <label class="custom-control-label" for=" customCheckLogin">
                                <span class="text-muted">Remember me?</span>
                            </label>
                        </div>*@
                        <div class="text-center">
                            <button class="btn btn-primary my-4" type="submit">Zaloguj</button>
                        </div>
                    }

                    
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-6">
                    <a id="forgot-password" class="text-light" href="#"><small>Nie pamiętam hasła</small></a>
                </div>
                <div class="col-6 text-right">
                    <a class="text-light" href='@Url.Action("Register", "Account")'><small>Stwórz konto</small></a>
                </div>
            </div>
        </div>
    </div>


</div>