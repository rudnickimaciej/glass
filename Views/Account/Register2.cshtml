@{
    Layout = "~/Views/Shared/_Account.cshtml";
}

@model Translate.ViewModels.RegisterViewModel
@section title
{
    <title>Rejestracja</title>
}


<!-- Sign up form -->
<section class="signup">
    <div class="container">
        <div class="signup-content">
            <div class="signup-form">
                <h2 class="form-title">Rejestracja</h2>
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "register-form", id = "register-form", role = "form" }))
                {
                    @Html.AntiForgeryToken();
            <div class="form-group">

                @Html.ValidationSummary(null, new { style = "color:red" })
            </div>

                    <div class="form-group">
                        <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>

                        @Html.TextBoxFor(m => m.UserName, new { id = "name", placeholder = "Nazwa użytkownika", type = "text" })
                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                        @Html.De

                    </div>

                    <div class="form-group">
                        <label for="Email"><i class="zmdi zmdi-account material-icons-name"></i></label>

                        @Html.TextBoxFor(m => m.Email, new { placeholder = "Twój email" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

                    </div>

                    <div class="form-group">
                        <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                        @Html.PasswordFor(m => m.Password, new { placeholder = "Hasło" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

                    </div>
                    <div class="form-group">
                        <label for="re-pass"><i class="zmdi zmdi-lock-outline"></i></label>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Powtórz hasło" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })

                    </div>

                    @*<div class="form-group">
                <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
                <label for="agree-term" class="label-agree-term"><span><span></span></span>Zgadzam się z  <a href="#" class="term-service">regulaminem</a></label>
            </div>*@
                    <div class="form-group form-button">
                        <input type="submit" name="signup" id="signup" class="form-submit" value="Zarejestruj" />
                    </div>

                }
            </div>
                    <div class="signup-image">
                        <figure>
                            <img src="~/Content/images/background/signin-image.jpg" />
                        </figure>
                        @Html.ActionLink("Mam już konto", "Login", null, new { @class = "signup-image-link" })
                    </div>
                </div>
    </div>
</section>


@section scripts
{
    <script>

        $("#agree-term").click(function () {
            $("#signup").attr("disabled", !this.checked);
        });

    </script>

}
