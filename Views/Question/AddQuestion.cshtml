
@model Translate.ViewModels.Complex.AddQuestionViewModel
@using Microsoft.AspNet.Identity

@{
    ViewData["Title"] = "DODAJ PYTANIE";
}

<div class="row">

    <div class="col-xl-12 order-xl-1">
        <div class="card bg-secondary shadow">
            <div class="card-header bg-white border-0">
                <div class="row align-items-center">
                    <div class="col-12">
                        <p> Przed dodaniem pytania zapoznaj się się z <a href="#"> regulaminem</a></p>

                    </div>
                    
                </div>
            </div>


            @using (Html.BeginForm("AddQuestion", "Forum", FormMethod.Post))
            {
                @Html.AntiForgeryToken()


                @Html.TextAreaFor(m => m.Content, new { @class = "form-control form-control-alternative",id="addQuestionForm", rows = "3", placeholder = "Napisz swoje pytanie" })
                @Html.ValidationMessageFor(m => m.Content, "", new { @class = "text-danger" })


                <div class="pl-lg-4">
                    <div class="row">


                        <div class="col-lg-12 text-center">
                            <button class="btn btn-success mt-4 mb-4" href="" type="submit">
                                Dodaj 
                            </button>
                        </div>
                    </div>
                </div>


                @Html.HiddenFor(m => m.AuthorName);




            }



        </div>
    </div>
</div>






