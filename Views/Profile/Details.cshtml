@using Microsoft.AspNet.Identity
@model Translate.ViewModels.Components.ProfileViewModel



    @{
        //var user = UserManager.FindByNameAsync(User.Identity.Name);
        //var isAdmin = user.Result.IsAdmin;
    }

    <div class="container body-content">
        <div class="row sectionHeader">
            <div class="sectionHeading noBorder">
                @Model.Username
            </div>
            @if (User.IsInRole("Admin"))
            {
                <form method="post" asp-controller="Profile" asp-action="Deactivate" asp-route-id="@Model.UserId">
                    <div>
                        <button class="btn btn-danger" active="@Model.IsActive">Deactivate User</button>
                    </div>
                </form>
            }
            </div>
            <div class="row userProfile">
                <div class="col-md-2">
                    <div id="userProfileImage" ></div>
                    @*@if (Context.User.Identity.Name == Model.Username)
                    {*@
                        <form method="post" enctype="multipart/form-data" asp-controller="Profile" asp-action="UploadProfileImage">
                            <div id="upload">
                                <label class="btn btn-info btn-file">
                                    Przeglądaj  <input type="file" name="file" style="display: none;">
                                </label>
                            </div>
                            <button type="submit" id="btn-profile" disabled class="btn btn-success">Zmień zdjęcie</button>
                        </form>
                    @*}*@
                </div>
                <div class="col-md-2">
                    <span id="userName">@Model.Username</span>
                    @if (@Model.IsAdmin)
                    {
                        <span class="isAdmin">Admin</span>
                    }
                    <span id="userRating">Punkty tłumaczeń: @Model.UserPoints</span>
                    <span id="userEmailLabel">Email: @Model.Email</span>
                    <span id="userCreatedLabel">Dołączył @Model.MemberSince</span>
                    <span id="userActiveLabel">
                        @if (!@Model.IsActive)
                        {
                            <span class="inactiveUser">Nieaktywny</span>
                        }
                        else
                        {
                            <span class="activeUser">Aktywny</span>
                        }
                    </span>
                    @if( true @*Model.UserId == User.Identity.GetUserId()*@)
                    {
                    <span>
                        @Html.ActionLink("Zmień hasło", "ChangePassword", "Manage")
                    </span>

                    }

                </div>
                <div class="col-md-8 profileDescription">
                    <span>
